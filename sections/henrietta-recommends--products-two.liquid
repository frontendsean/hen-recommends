      },
    {
        "type": "text",
        "id": "right-sub-heading",
        "label": "Right product - Sub-Heading",
    "default": "Rich text"
      },
    {
        "type": "text",
        "id": "right-heading",
        "label": "Right product - Heading",
    "default": "Rich text"
      },    
    {
        "id": "hr-rightcontent",
        "type": "richtext",
        "label": "Right content - Paragraph",
      "info": "To add a new link, type some text and highlight it, then click the link symbol above. To edit link, click the link and then click the edit button which appears. You can also make text bold or italic by using the button above.",
        "default": "<p>Add your text here</p>"
      },
    {
        "id": "hr-readmore-right",
        "type": "text",
        "label": "Read more - link URL"
      },
      {
        "id": "hr-readmorelabel-right",
        "type": "text",
        "label": "Read more link text"
      },    
    {
    "id": "variant-price-right",
    "type": "text",
    "label" : "Enter product price"
    },  
    {
    "id": "right-product-id",
    "type": "number",
    "label" : "Enter product ID",
    "info" : "Do not touch"
    },
    {
    "id": "right-variant-id",
    "type": "number",
    "label" : "Enter variant ID",
    "info" : "Do not touch"
    } 
    ]
  }
{% endschema %}
